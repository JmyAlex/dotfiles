#!/bin/bash

# Normal Colors
Black='\033[00;38;5;0m'        # Black
Red='\033[00;38;5;1m'          # Red
Green='\033[00;38;5;2m'        # Green
Yellow='\033[00;38;5;3m'       # Yellow
Blue='\033[00;38;5;4m'         # Blue
Purple='\033[00;38;5;5m'       # Purple
Cyan='\033[00;38;5;6m'         # Cyan
White='\033[00;38;5;7m'        # White

# Bold
BBlack='\e[1;30m'       # Black
BRed='\e[1;31m'         # Red
BGreen='\e[1;32m'       # Green
BYellow='\e[1;33m'      # Yellow
BBlue='\e[1;34m'        # Blue
BPurple='\e[1;35m'      # Purple
BCyan='\e[1;36m'        # Cyan
BWhite='\e[1;37m'       # White

# Background
On_Black='\e[40m'       # Black
On_Red='\e[41m'         # Red
On_Green='\e[42m'       # Green
On_Yellow='\e[43m'      # Yellow
On_Blue='\e[44m'        # Blue
On_Purple='\e[45m'      # Purple
On_Cyan='\e[46m'        # Cyan
On_White='\e[47m'       # White

NC="\e[m"               # Color Reset

ALERT=${BWhite}${On_Red} # Bold White on red background

# My variable colors
if [ "$TERM" = "linux" ]; then
	cUser="${Purple}"
	cHost="${Purple}"
	cPwd="${Blue}"
	cDate="${Yellow}"
	cDivider="${Cyan}" 
	cGit="${Cyan}"
else
	cUser='\[\033[00;38;5;13m\]'
	cHost='\[\033[00;38;5;13m\]'
	cPwd='\[\033[01;38;5;12m\]'
	cDate='\[\033[00;38;5;7m\]'
	cDivider='\[\033[00;38;5;14m\]' 
	cGit='\[\033[00;38;5;3m\]'
fi

cReset="\[\033[00m\]"

# Set prompt colour
if [ `id -u` -eq 0 ]
then
	cText="${LightRed}"
	cBorder="${Red}"
else
	cText="${LightCyan}"
	cBorder="${cReset}"
fi

