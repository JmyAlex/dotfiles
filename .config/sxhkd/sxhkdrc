#
# bspwm hotkeys
#

#+ quit bspwm
super + alt + {shift + ,_}Escape
    {bspc quit 1,\
     bspc query -T > "$BSPWM_TREE"; \
        bspc query -H > "$BSPWM_HISTORY"; \
        bspc query -S > "$BSPWM_STACK"; \
        bspc quit}

#super + alt + Escape
    #bspc quit
super + alt + Escape
	pkill -x panel; bspc quit && pkill dzen2

#close focused window
super + w
    bspc window -c

#+ cycle (monocole|tiled) layout
super + t
    bspc desktop -l next

#balance tree
super + b
    bspc desktop -B

#toggle floating, fullscreen
super + {s,f}
    bspc window -t {floating,fullscreen}

#+ jump between last frame, or view last desktop
super + {grave,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

#+ change focus or move window in direction
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

#+ cycle to next/prev desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left,down,up,right} push

super + alt + shift + {h,j,k,l}
    bspc window -e {right,up,down,left} pull

#+ set common ratios for manual splitting
super + ctrl + {1-9}
    bspc window -r 0.{1-9}

#+ view desktop or send focused window to desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# mouse
~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

#
# wm independent hotkeys
#

super + Return
	urxvt
	#gnome-terminal

super + shift + Return
    urxvt && bspc window -t floating
    #gnome-terminal && bspc window -t floating

super + space
	gmrun

super + shift + b
	firefox

Print
	scrot -q 100

# laptop special buttons
{_,shift + }XF86Audio{Raise,Lower}Volume
	volume {_,strong_} {raise,lower}

#XF86AudioLowerVolume
	#volume lower

XF86AudioMute
	volume toggle

XF86AudioPlay
	rhythmbox-client --play-pause
	#ncmpcpp toggle
	
XF86Audio{Next,Prev}
	rhythmbox-client --{next,previous}
	#ncmpcpp next

#XF86AudioPrev
	#rhythmbox-client --previous
	#ncmpcpp prev

XF86Sleep
	gksu pm-suspend

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR2 -x sxhkd
