#
# bspwm hotkeys
#

#+ quit bspwm
super + alt + {shift + ,_}Escape
    {bspc quit 1,\
     bspc query -T > "$BSPWM_TREE"; \
        bspc query -H > "$BSPWM_HISTORY"; \
        bspc query -S > "$BSPWM_STACK"; \
        bspc quit}

#close/kill focused window
super + {_,shift + }w
	bspc window -{c,k}

#+ cycle (monocole|tiled) layout
super + t
    bspc desktop -l next

#Rotate the tree of the selected desktop
super + {r,shift + r,u}
	bspc desktop -R {90,-90,180}

#Flip the tree of the selected desktop
super + {backslash,shift + backslash}
	bspc desktop -F {vertical,horizontal}

super + z
	bspc control --toggle-visibility

super + shift + p
	bspc config focus_follows_pointer {true,false}

#balance tree
super + b
    bspc desktop -B

#toggle floating, fullscreen
super + {shift+s,s,f,x,X,m}
	bspc window -t {pseudo_tiled,floating,fullscreen,locked,sticky,private}

#+ jump between last frame, or view last desktop
super + {grave,Tab}
    bspc {window,desktop} -f last

#Swap the selected window with the given window
super + {_,shift + }apostrophe
	bspc window -s last{_, -f last}

#Transplant the selected window to the given window
super + y
    bspc window -w last.manual

#super + m
    #bspc window -s biggest

#+ change focus or move window in direction
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

#Focus the selected or given window
super + {_,shift + }c
    bspc window -f {next,prev}

super + {d,shift + d}
	bspc window -f {next,prev}.tiled

super + {_,shift + }{a,v,e}
	bspc window -f {next,prev}.{floating,unlike,like}

#Circulate the leaves of the tree of the selected desktop.
super + {comma,period}
    bspc desktop -C {backward,forward}

#+ cycle to next/prev desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

#Preselect the splitting area of the selected window
super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

#Cancel preselet/cancel presel on desktop
super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -20,down +20,up -20,right +20}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -20,up +20,down -20,left +20}

super + alt + control + {h,j,k,l} ; {0-9}
	bspc window -e {left,down,up,right} 0.{0-9}

#+ set common ratios for manual splitting
super + ctrl + {1-9}
    bspc window -r 0.{1-9}

#+ view desktop or send focused window to desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# mouse
~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt
	#gnome-terminal

super + shift + Return
    urxvt && bspc window -t floating
    #gnome-terminal && bspc window -t floating

super + space
	dmenu_launch
	#gmrun

super + shift + space
	dmenu_raise

super + shift + b
	firefox

Print
	scrot -q 100

# laptop special buttons
{_,shift + }XF86Audio{Raise,Lower}Volume
	volume {_,strong_} {raise,lower}

#XF86AudioLowerVolume
	#volume lower

XF86AudioMute
	volume toggle

XF86AudioPlay
	rhythmbox-client --play-pause
	#ncmpcpp toggle
	
XF86Audio{Next,Prev}
	rhythmbox-client --{next,previous}
	#ncmpcpp next

#XF86AudioPrev
	#rhythmbox-client --previous
	#ncmpcpp prev

XF86Sleep
	gksu pm-suspend

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR2 -x sxhkd
